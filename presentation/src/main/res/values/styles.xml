<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/sh_splash</item>
    </style>

    <style name="SimpleTextField">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PrimaryTextField" parent="SimpleTextField">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="RedTextField" parent="SimpleTextField">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="SmallTextField">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
